{{- $email := promptStringOnce . "email" "Email address" -}}
{{- $username := promptStringOnce . "username" "Username" -}}
{{- $gh_email := promptStringOnce . "gh_email" "GitHub email address" -}}
{{- $gh_username := promptStringOnce . "gh_username" "GitHub username" -}}
{{- $projects_dir := promptStringOnce . "projects_dir" "Work project directory (name of directory for the work projects)" -}}
{{- $gh_projects_dir := promptStringOnce . "gh_projects_dir" "GitHub project directory (name of directory for the GitHub projects)" -}}

; enable
{{- $bat := promptBoolOnce .enable "bat" "Enable bat as a cat replacement (y/n)" -}}
{{- $nix := promptBoolOnce .enable "nix" "Enable nix as a package manager (y/n)" -}}
{{- $broot := promptBoolOnce .enable "broot" "Enable broot as a tree alternative (y/n)" -}}
{{- $jenv := promptBoolOnce .enable "jenv" "Enable jenv as a Java version manager (y/n)" -}}

[data]
    email = {{ $email | quote }}
    username = {{ $username | quote }}
    projects_dir = {{ $projects_dir | quote }}
    gh_email = {{ $gh_email | quote }}
    gh_username = {{ $gh_username | quote }}
    gh_projects_dir = {{ $gh_projects_dir | quote }}

[data.enable]
    bat = {{ $bat }}
    nix = {{ $nix }}
    broot = {{ $broot }}
    jenv = {{ $jenv }}
